<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
>
	<Dialog
		id="editDialog"
		type="Message"
	>
		<content>
			<f:Form
				id="form"
				title=""
				editable="true"
				class="isReadonly"
			>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanL="3"
						labelSpanM="2"
					/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>LabelEmployeeFirstName}">
								<f:fields>
									<MultiInput
										id="editEmployeeFirstName"
										required="true"
										showValueHelp="true"
										valueHelpOnly="true"
										value="{
											path: 'saleEdit>/employeeFirstName'
										}"
										valueHelpRequest=".openEmployeeValueHelp('editEmployeeFirstName')"
										tokenChange=".populateInput('editEmployeeFirstName', 'editEmployeeLastName', 'Employees', 'LastName')"
										suggestionItems="{
											path: '/results',
											sorter: {
												path: 'FirstName'
											}
										}"
									>
										<c:Item
											key="{EmployeeID}"
											text="{FirstName}"
										/>
									</MultiInput>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>LabelEmployeeLastName}">
								<f:fields>
									<Input
										id="editEmployeeLastName"
										enabled="false"
										value="{
											path: 'saleEdit>/employeeLastName'
										}"
									/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>LabelShipCountry}">
								<f:fields>
									<Select id="editShipCountry"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>LabelProduct}">
								<f:fields>
									<MultiInput
										id="editProduct"
										required="true"
										showValueHelp="true"
										valueHelpOnly="true"
										value="{
											path: 'saleEdit>/productName'
										}"
										valueHelpRequest=".openProductValueHelp('editProduct')"
										tokenChange=".populateInput('editProduct', 'editUnitPrice', 'Products', 'UnitPrice')"
										suggestionItems="{
											path: '/results',
											sorter: {
												path: 'ProductName'
											}
										}"
									>
										<c:Item
											key="{ProductID}"
											text="{ProductName}"
										/>
									</MultiInput>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>LabelUnitPrice}">
								<f:fields>
									<Input
										id="editUnitPrice"
										value="{
											path: 'saleEdit>/unitPrice'
										}"
										enabled="false"
									/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>LabelQuantity}">
								<f:fields>
									<Input
										id="editQuantity"
										value="{
											path: 'saleEdit>/quantity'
										}"
										type="Number"
									/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>LabelTotalPrice}">
								<f:fields>
									<FlexBox>
										<Input
											id="editTotalPrice"
											enabled="false"
											width="98%"
											class="sapUiLargeMarginLeft"
										>
											<layoutData>
												<FlexItemData growFactor="1"/>
											</layoutData>
										</Input>
										<Button
											text="Calculate"
											press=".calculateTotalPrice"
										>
											<layoutData>
												<FlexItemData growFactor="1"/>
											</layoutData>
										</Button>
									</FlexBox>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
		<beginButton>
			<Button
				type="Emphasized"
				text="{i18n>LabelCreate}"
				press=".saveEdit"
			/>
		</beginButton>
		<endButton>
			<Button
				type="Transparent"
				text="{i18n>LabelCancel}"
				press=".closeEditForm"
			/>
		</endButton>
	</Dialog>
</c:FragmentDefinition>