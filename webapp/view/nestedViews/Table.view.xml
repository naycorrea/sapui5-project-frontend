<mvc:View
	controllerName="sapui5.project.frontend.controller.Table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
>
	<Table
		id="tableId"
		items="{
			path: 'sales>/results'
		}"
		class="sapUiLargeMarginTop"
		updateFinished="onUpdateFinished"
	>
		<headerToolbar>
			<OverflowToolbar
				style="Clear"
				height="3rem"
			>
				<Title
					id="TableTitle"
					text="{i18n>TableTitle}"
					level="H1"
				/>
				<ToolbarSpacer/>
				<Button
					id="idCreateReport"
					text="{i18n>LabelCreateReport}"
					icon="sap-icon://create"
					type="Emphasized"
					press=".openForm('')"
				/>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column id="created">
				<Text text="{i18n>LabelCreated}"/>
			</Column>
			<Column id="employee">
				<Text text="{i18n>LabelEmployee}"/>
			</Column>
			<Column id="shipCountry">
				<Text text="{i18n>LabelShipCountry}"/>
			</Column>
			<Column id="product">
				<Text text="{i18n>LabelProduct}"/>
			</Column>
			<Column id="unitPrice">
				<Text text="{i18n>LabelUnitPrice}"/>
			</Column>
			<Column id="quantity">
				<Text text="{i18n>LabelQuantity}"/>
			</Column>
			<Column id="totalPrice">
				<Text text="{i18n>LabelTotalPrice}"/>
			</Column>
			<Column id="edit">
				<Text text="{i18n>LabelEdit}"/>
			</Column>
			<Column id="delete">
				<Text text="{i18n>LabelDelete}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem
				id="tableItemTemplate"
				vAlign="Middle"
			>
				<Text text="{sales>dateCreated}"/>
				<Text text="{sales>employeeFirstName} {sales>employeeLastName}"/>
				<Text text="{sales>shipCountry}"/>
				<Text text="{sales>productName}"/>
				<Text text="$ {sales>unitPrice}"/>
				<Text text="{sales>quantity}"/>
				<Text text="$ {sales>totalPrice}"/>
				<Button
					text=""
					icon="sap-icon://edit"
					type="Transparent"
					press=".openForm(${sales>_id})"
				/>
				<Button
					text=""
					icon="sap-icon://delete"
					type="Transparent"
					press=".deleteSale(${sales>_id})"
				/>
			</ColumnListItem>
		</items>
	</Table>
	<Toolbar>
		<ToolbarSpacer/>
		<content>
			<Button
				id="prevButton"
				icon="sap-icon://navigation-left-arrow"
				press="changePage(-1)"
			/>
			<Text
				id="totalPageId"
				text="{=${searchStatus>/currentPage} + 1} {i18n>LabelPageRange} {searchStatus>/totalPages}"
			/>
			<Button
				id="nextButton"
				icon="sap-icon://navigation-right-arrow"
				press="changePage(1)"
			/>
		</content>
	</Toolbar>
</mvc:View>