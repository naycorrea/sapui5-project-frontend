<mvc:View
	controllerName=""
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:filterbar="sap.ui.comp.filterbar"
	xmlns:c="sap.ui.core"
	displayBlock="true"
>
	<filterbar:FilterBar
		id="filterBar"
		search=".filterReports"
		showClearButton="true"
		showClearOnFB="true"
		clear=".clearReportFilters"
		useToolbar="false"
		showFilterConfiguration="false"
	>
		<filterbar:filterGroupItems>
			<filterbar:FilterGroupItem
				id="dateItem"
				groupName="__$INTERNAL$"
				name="date"
				label="{i18n>LabelCreated}"
				visibleInFilterBar="true"
			>
				<filterbar:control>
					<DatePicker id="dateCreatedFilter"/>
				</filterbar:control>
			</filterbar:FilterGroupItem>
			<filterbar:FilterGroupItem
				id="employeeItem"
				groupName="__$INTERNAL$"
				name="employee"
				label="{i18n>LabelEmployee}"
				visibleInFilterBar="true"
			>
				<filterbar:control>
					<MultiInput
						id="employeeFilter"
						showValueHelp="true"
						valueHelpOnly="true"
						valueHelpRequest=""
						suggestionItems="{
							path: '/results',
							sorter: {
								path: 'EmployeeID'
							}
						}"
					>
						<c:Item
							key="{EmployeeID}"
							text="{FirstName}"
						/>
					</MultiInput>
				</filterbar:control>
			</filterbar:FilterGroupItem>
			<filterbar:FilterGroupItem
				id="countryItem"
				groupName="__$INTERNAL$"
				name="country"
				label="{i18n>LabelCreated}"
				visibleInFilterBar="true"
			>
				<filterbar:control>
					<Select id="countryFilter">
						<items>
							<c:Item
								key=""
								text="{i18n>LabelAllOptions}"
							/>
							<c:Item
								key="Brazil"
								text="{i18n>LabelBrazil}"
							/>
							<c:Item
								key="USA"
								text="{i18n>LabelUSA}"
							/>
							<c:Item
								key="Canada"
								text="{i18n>LabelCanada}"
							/>
						</items>
					</Select>
				</filterbar:control>
			</filterbar:FilterGroupItem>
			<filterbar:FilterGroupItem
				id="productItem"
				groupName="__$INTERNAL$"
				name="product"
				label="{i18n>LabelProduct}"
				visibleInFilterBar="true"
			>
				<filterbar:control>
					<MultiInput
						id="productFilter"
						showValueHelp="true"
						valueHelpOnly="true"
						valueHelpRequest=""
						suggestionItems="{
							path: '/results',
							sorter: {
								path: 'ProductID'
							}
						}"
					>
						<c:Item
							key="{ProductID}"
							text="{ProductName}"
						/>
					</MultiInput>
				</filterbar:control>
			</filterbar:FilterGroupItem>
		</filterbar:filterGroupItems>
	</filterbar:FilterBar>
</mvc:View>